{
  "name": "accounts-poc",
  "version": "0.1.0",
  "description": "Accounts rest API service using TypeScript, Node.js, Express, MongoDB, and Mongoose.",
  "main": "dist/server.js",
  "scripts": {
    "preinstall": "cd client && npm install",
    "build": "tsc && cd client && npm run build",
    "postinstall": "npm run build",
    "test": "jest --forceExit",
    "start": "node ./dist/server.js",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"**/**/*.ts\"",
    "prettier:write": "npm run prettier:base -- --write \"**/**/*.ts\"",
    "docker:up": "docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "mongo:up": "docker-compose -f docker-compose-mongo-only.yml up -d",
    "mongo:down": "docker-compose -f docker-compose-mongo-only.yml down",
    "mongo:logs": "docker-compose -f docker-compose-mongo-only.yml logs -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rixka/accounts-poc.git"
  },
  "author": "Kayleigh Rix",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rixka/accounts-poc/issues"
  },
  "homepage": "https://github.com/rixka/accounts-poc#readme",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node",
    "mapCoverage": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "mongoose": "^5.4.9",
    "morgan": "^1.9.1",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/jest": "^20.0.4",
    "@types/mongoose": "^5.3.12",
    "@types/morgan": "^1.7.35",
    "@types/supertest": "^2.0.2",
    "@types/validator": "^10.9.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "jest": "^21.2.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.3",
    "supertest": "^3.4.2",
    "ts-jest": "^21.2.4",
    "typescript": "^3.3.1"
  }
}
